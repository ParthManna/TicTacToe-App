<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/background_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/letsplay"
        android:layout_width="184dp"
        android:layout_height="48dp"
        android:background="@drawable/background_innerbox"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:layout_marginBottom="100dp"
        android:text="@string/let_s_play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tictactoe"/>

    <ImageView
        android:id="@+id/tictactoe"
        android:layout_width="234dp"
        android:layout_height="277dp"
        android:scaleType="fitXY"
        android:src="@drawable/tictactoe"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/inner_box_1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tictactoe">


        <ImageView
            android:layout_width="61dp"
            android:layout_height="57dp"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:src="@drawable/star" />

        <ImageView
            android:layout_width="61dp"
            android:layout_height="57dp"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:src="@drawable/star" />

        <ImageView
            android:layout_width="61dp"
            android:layout_height="57dp"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:src="@drawable/star" />


    </LinearLayout>

    <ImageView
        android:layout_width="108dp"
        android:layout_height="98dp"
        android:scaleType="fitXY"
        android:src="@drawable/small_star"
        app:layout_constraintEnd_toStartOf="@+id/tictactoe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"/>

    <ImageView
        android:layout_width="108dp"
        android:layout_height="98dp"
        android:scaleType="fitXY"
        android:src="@drawable/small_star"
        app:layout_constraintEnd_toStartOf="@+id/tictactoe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginStart="50dp"/>

    <ImageView
        android:layout_width="108dp"
        android:layout_height="98dp"
        android:layout_marginTop="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/small_star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tictactoe"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:layout_width="108dp"
        android:layout_height="98dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/small_star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tictactoe"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="140dp"
        android:layout_height="136dp"
        android:scaleType="fitXY"
        android:src="@drawable/rocket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="129dp"
        android:layout_height="138dp"
        android:scaleType="fitXY"
        android:src="@drawable/ufo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/letsplay" />




</androidx.constraintlayout.widget.ConstraintLayout>